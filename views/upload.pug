doctype html
html
   head
      title #{title}

      link(rel='icon', href='data:;base64,iVBORw0KGgo=')

      link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')

      // A polyfill for Promise is needed for IE11 support.
      script(src='https://cdn.jsdelivr.net/npm/promise-polyfill@8/dist/polyfill.min.js')

      script(src='https://ircdname.azureedge.net/immersivereadersdk/immersive-reader-sdk.1.4.0.js')
      script(src='https://code.jquery.com/jquery-3.6.0.min.js', integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=', crossorigin='anonymous')
      script(src='../js/upload.js')

      style(type="text/css").
         .upload-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
         }
         .file-input {
            margin: 20px 0;
         }
         .upload-btn {
            margin-top: 10px;
         }
         #status {
            margin-top: 20px;
         }
   body
      div(class="container")
         include partials/navbar

         div(class="upload-container")
            h1 Upload Document for Immersive Reader
            p Upload a document (.txt, .html, .htm, .pdf, .docx) to view in Immersive Reader

            form(id="uploadForm" enctype="multipart/form-data")
               div(class="file-input")
                  label(for="file") Choose file:
                  input(type="file" id="file" name="file" accept=".txt,.html,.htm,.pdf,.docx" required)
               button(type="submit" class="btn btn-primary upload-btn") Upload and Open in Immersive Reader

            div(id="status")
